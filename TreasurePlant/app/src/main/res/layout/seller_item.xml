<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="15dp"
    android:background="@color/color1">

    <TextView
        android:id="@+id/seller_item_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="24dp"
        android:layout_marginTop="24dp"
        android:text="TextView"
        android:textSize="16sp"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/seller_item_call"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="24dp"
        android:background="@color/color1"
        android:drawableStart="@drawable/call_dropped_svgrepo_com"
        android:drawableTint="@color/black"
        android:padding="7dp"
        app:layout_constraintBottom_toBottomOf="@+id/seller_item_name"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@+id/seller_item_name" />

    <Button
        android:id="@+id/seller_item_isBlock_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="18dp"
        android:layout_marginBottom="16dp"
        android:text="Button"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="@+id/seller_item_name"
        app:layout_constraintTop_toBottomOf="@+id/seller_item_name" />

    <Button
        android:id="@+id/seller_item_location_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:backgroundTint="@color/green_bg_1"
        android:text="Location"
        app:layout_constraintEnd_toEndOf="@+id/seller_item_call"
        app:layout_constraintTop_toTopOf="@+id/seller_item_isBlock_button" />
</androidx.constraintlayout.widget.ConstraintLayout>